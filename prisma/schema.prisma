generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  password       String
  name           String?
  mustChangePass Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Client {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique  // URL-friendly name, e.g. "bulderownia"
  description String?
  color       String?  // Brand color hex, e.g. "#ff6600"
  isActive    Boolean  @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  tags        Tag[]
  campaigns   Campaign[]

  @@index([isActive])
}

model Campaign {
  id          String   @id @default(cuid())
  name        String
  description String?
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tags        Tag[]

  @@index([clientId])
  @@index([isActive])
}

// Tag types: "url" = simple redirect, "video" = video player, "multilink" = page with multiple links, "vcard" = digital business card, "google-review" = google review redirect
model Tag {
  id          String    @id
  name        String
  tagType     String    @default("url")
  targetUrl   String
  description String?
  videoFile   String?
  links       Json?     // For multilink: [{ label, url, icon }]
  isActive    Boolean   @default(true)
  clientId    String?
  client      Client?   @relation(fields: [clientId], references: [id])
  campaignId  String?
  campaign    Campaign? @relation(fields: [campaignId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  scans       Scan[]
  linkClicks  LinkClick[]
  videoEvents VideoEvent[]

  @@index([isActive])
  @@index([clientId])
  @@index([campaignId])
}

model Scan {
  id          String   @id @default(cuid())
  tagId       String
  tag         Tag      @relation(fields: [tagId], references: [id])
  timestamp   DateTime @default(now())
  ipHash      String
  deviceType  String
  userAgent   String?  @db.Text
  browserLang String?
  city        String?
  country     String?
  region      String?
  isReturning Boolean  @default(false)
  referrer    String?  @db.Text
  eventSource String?
  nfcId       String?  // Physical NFC chip identifier (from ?nfc= URL param)
  // P0 telemetry
  visitorId      String?
  sessionId      String?
  utmSource      String?
  utmMedium      String?
  utmCampaign    String?
  utmContent     String?
  utmTerm        String?
  gclid          String?
  fbclid         String?
  acceptLanguage String?
  path           String?
  query          String?
  rawMeta        String?  @db.Text
  ipPrefix       String?
  ipVersion      Int?

  @@index([tagId])
  @@index([timestamp])
  @@index([ipHash])
  @@index([country])
  @@index([deviceType])
  @@index([nfcId])
  @@index([tagId, timestamp])
  @@index([visitorId, timestamp])
}

model LinkClick {
  id        String   @id @default(cuid())
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])
  linkUrl   String   @db.Text
  linkLabel String?
  linkIcon  String?
  timestamp DateTime @default(now())
  ipHash    String?
  // P0 telemetry
  visitorId      String?
  sessionId      String?
  utmSource      String?
  utmMedium      String?
  utmCampaign    String?
  utmContent     String?
  utmTerm        String?
  gclid          String?
  fbclid         String?
  acceptLanguage String?
  userAgent      String?  @db.Text
  deviceType     String?
  referrer       String?  @db.Text
  path           String?
  query          String?
  rawMeta        String?  @db.Text
  ipPrefix       String?
  ipVersion      Int?

  @@index([tagId])
  @@index([timestamp])
  @@index([tagId, linkUrl])
  @@index([tagId, timestamp])
  @@index([visitorId, timestamp])
}

model VideoEvent {
  id        String   @id @default(cuid())
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])
  event     String   // "play", "pause", "ended", "progress_25", "progress_50", "progress_75", "progress_100"
  timestamp DateTime @default(now())
  ipHash    String?
  watchTime Float?   // seconds watched at the time of event
  // P0 telemetry
  visitorId      String?
  sessionId      String?
  utmSource      String?
  utmMedium      String?
  utmCampaign    String?
  utmContent     String?
  utmTerm        String?
  gclid          String?
  fbclid         String?
  acceptLanguage String?
  userAgent      String?  @db.Text
  deviceType     String?
  referrer       String?  @db.Text
  path           String?
  query          String?
  rawMeta        String?  @db.Text
  ipPrefix       String?
  ipVersion      Int?

  @@index([tagId])
  @@index([timestamp])
  @@index([tagId, event])
  @@index([tagId, timestamp])
  @@index([visitorId, timestamp])
}
